# This file controls the activity of snmpd and snmptrapd
export MIBS=all

# snmpd control (yes means start daemon).
# SNMPDRUN=yes

# snmpd options (use syslog, close stdin/out/err).
# SNMPDOPTS='-Lsd -Lf /dev/null -u snmp -g snmp -I -smux -p /var/run/snmpd.pid'

# Log to snmpd.log | run as user 'snmp' | set pidfile to...
# SNMPDOPTS='-Lf /var/log/snmpd.log -u snmp -p /var/run/snmpd.pid'


# snmptrapd control (yes means start daemon).  As of net-snmp version
# 5.0, master agentx support must be enabled in snmpd before snmptrapd
# can be run.  See snmpd.conf(5) for how to do this.
TRAPDRUN=yes

# snmptrapd options Use syslog, only use mibs from our directory (change this to -m to use both yours and ours)
TRAPDOPTS='-p /var/run/snmptrapd.pid -Lf /var/log/logzilla/trapd.log -Ls 0 -M /var/www/logzilla/snmp/mibs/v1:/var/www/logzilla/snmp/mibs/v2:/var/www/logzilla/snmp/mibs'

# create symlink on Debian legacy location to official RFC path
SNMPDCOMPAT=yes
